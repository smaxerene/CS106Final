                                    <Rectangle Width="330" Height="200">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/Resources/images/Comment Image.png" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem >
                                <StackPanel>
                                    <Rectangle Width="330" Height="200">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/Resources/images/Comment Image.png" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem >
                                <StackPanel>
                                    <Rectangle Width="330" Height="200">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/Resources/images/Comment Image.png" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </StackPanel>
