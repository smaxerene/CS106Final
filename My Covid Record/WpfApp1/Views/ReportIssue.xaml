<Window x:Class="WpfApp1.ReportIssue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReportIssue" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#FFCC00" Margin="10,10,29.6,96.8">
            <TextBlock Text="Email:" FontWeight="Bold" FontSize="20" Margin="10"/>
            <TextBlock x:Name="emailTextBlock" Margin="10"/>
            <TextBlock Text="Subject:" FontWeight="Bold" FontSize="20" Margin="10,10,649.6,10"/>
            <TextBlock x:Name="subjectTextBlock" Margin="10,10,267.6,10" Height="23"/>
            <TextBlock Text="Description:" FontWeight="Bold" FontSize="20" Margin="10"/>
            <TextBlock x:Name="descriptionTextBlock" Margin="10"/>
        </StackPanel>

        <!-- Content -->
        <Border BorderBrush="Gray" BorderThickness="1" Margin="10,292,9.6,25.4">
            <TextBlock Text="Content goes here..." Margin="10"/>
        </Border>
    </Grid>
</Window>
