<Window x:Class="WpfApp1.Views.ReportRecieves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ReportRecieves" Height="1080" Width="1920">
    <Grid>
        <Border BorderBrush="Black" Background="#FFB300" BorderThickness="1" HorizontalAlignment="Left" Height="597" Margin="265,429,0,0" VerticalAlignment="Top" Width="1475">
            <Border BorderBrush="Black" Background="DarkCyan" BorderThickness="1" HorizontalAlignment="Left" Height="548" Margin="32,26,0,0" VerticalAlignment="Top" Width="1412">

            </Border>
        </Border>



        <Line X1="0" Y1="0" X2="2000" Y2="0" Stroke="Black" StrokeThickness="5" Margin="-8,390,0,665" />
        <ListView x:Name="reportListView" Margin="442,532,510,106">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ReportId}" />
                    <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}" />
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" />
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Account"  HorizontalAlignment="Left" Height="28" Margin="1562,266,0,0" VerticalAlignment="Top" Width="252"/>

    </Grid>
</Window>
