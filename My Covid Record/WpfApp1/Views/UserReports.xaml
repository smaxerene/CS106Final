<Window x:Class="WpfApp1.UserReports"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1;assembly=WpfApp1"
        mc:Ignorable="d"
        Title="ReportIssue" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="1219.2"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="reportsListView" Margin="243,750,842.6,319.2" SelectionMode="Single"
          SelectedItem="{Binding SelectedReport}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Issue:" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Grid.Column="1" Text="{Binding Subject}" Margin="5,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding Description}" Margin="5,20" Visibility="Collapsed" TextWrapping="Wrap"/>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsMouseOver}" Value="True">
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <StackPanel Background="#FFCC00" Margin="180,537,190.6,167.2">
            <Border BorderBrush="Silver" BorderThickness="2" Height="358" Margin="42,80,600.2,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#1E3C72" />
                        <GradientStop Offset="1" Color="#A6ACAF" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Enter your Email:" Foreground="White" FontSize="20" Margin="10,20,9.6,0.6" Grid.RowSpan="2"/>
                    <TextBox x:Name="emailTextBox" Margin="167,24,387.6,0.6" Background="WhiteSmoke" Grid.RowSpan="2"/>
                    <TextBlock Grid.Row="2" Text="Subject:" Foreground="White" FontSize="20" Margin="10,21,9.6,85.6"/>
                    <TextBox Grid.Row="2" x:Name="subjectTextBox" Margin="96,18,399.6,85.6" Background="WhiteSmoke"/>
                    <TextBlock Grid.Row="2" Text="Description:" Foreground="White" FontSize="20" Margin="10,53.4,9.6,53"/>
                    <Button Content="Submit" Click="Submit_Click" Margin="266,84.2,297.6,-107.4" Grid.Row="5"/>
                </Grid>
            </Border>
        </StackPanel>

        <TextBlock Text="Account" FontSize="25" FontWeight="Bold" Margin="1704,377,107.6,642.2" />
        <Button Name="SearchButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Margin="575,383,0,0" Height="25" BorderThickness="0"  Background="White">
            <Image Source="/Resources/images/searchbutton.png" RenderTransformOrigin="0.674,-0.028"></Image>
        </Button>
        <Image Source="/Resources/images/warning.png" Margin="965,466,882.6,687.2"></Image>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" TextWrapping="Wrap" Text="My Covid Record" VerticalAlignment="Top" Margin="554,250,0,0" FontFamily="Inter" Width="764" FontSize="80" TextAlignment="Center" Height="96"/>
        <Line X1="0" Y1="0" X2="12000" Y2="0" Stroke="Black" StrokeThickness="10" Margin="0,453,0.6,379.2" />
        <Image HorizontalAlignment="Left" Height="75" VerticalAlignment="Top" Width="78"
               Source="/Resources/images/NZ Gov Logo.png" Margin="10,10,0,0"/>
        <Image HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="200" Margin="1704,10,0,0"
               Source="/Resources/images/NZ Gov.png" />
        <Image HorizontalAlignment="Left" Height="144" VerticalAlignment="Top" Width="169" RenderTransformOrigin="3.592,3.258" Margin="862,101,0,0"
               Source="/Resources/images/My Covid Record Logo.png"/>
        <Image Source="/Resources/images/menu.png" Margin="180,383,1697.6,748.2" RenderTransformOrigin="3.047,-2.472"></Image>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Report Issues:" VerticalAlignment="Top" Margin="180,537,0,0" FontFamily="Inter" Width="334" FontSize="40" TextAlignment="Center" Height="40"/>

        <TextBlock x:Name="descriptionTextBlock" Text="{Binding SelectedItem.Description, ElementName=reportsListView}" FontStyle="Oblique" FontSize="20" Margin="10,86,9.6,10.2" Visibility="Collapsed"/>
    </Grid>
</Window>
